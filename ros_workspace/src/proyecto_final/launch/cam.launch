<launch>
  <!-- CÁMARA FRONTAL -->
  <node pkg="tf" type="static_transform_publisher" name="world_to_cam_0"
      args="0 0 0 0 0 0 world usb_cam 1 00" />
    <node name="front_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
      <param name="video_device" value="/dev/video0" /> <!-- CAMBIAR ID -->
      <param name="image_width" value="640" />
      <param name="image_height" value="480" />
      <param name="pixel_format" value="yuyv" />
      <param name="camera_frame_id" value="front_cam" />
      <param name="io_method" value="mmap"/>
      <param name="camera_info_url" value="/home/laboratorio/ros_workspace/src/proyecto_final/data/camera_data/ost.yaml"/>
    </node>
    <node name="image_view_0" pkg="image_view" type="image_view" respawn="false" output="screen">
      <remap from="image" to="/front_cam/image_raw"/>
      <param name="autosize" value="true" />
    </node>

    <!-- CÁMARA PLANTA -->
    <node pkg="tf" type="static_transform_publisher" name="world_to_cam_1"
      args="0 0 0 0 0 0 world usb_cam 1 00" />
    <node name="top_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
      <param name="video_device" value="/dev/video4" /> <!-- CAMBIAR ID -->
      <param name="image_width" value="640" />
      <param name="image_height" value="480" />
      <param name="pixel_format" value="yuyv" />
      <param name="camera_frame_id" value="top_cam" />
      <param name="io_method" value="mmap"/>
      <param name="camera_info_url" value="/home/laboratorio/ros_workspace/src/proyecto_final/data/camera_data/ost.yaml"/>
    </node>
  <node name="image_view_1" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/top_cam/image_raw"/>
    <param name="autosize" value="true" />
  </node>
</launch>


